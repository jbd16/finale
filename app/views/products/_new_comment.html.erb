<% if signed_in? %>
  <h4>Add a review:</h4>
  <%=for_for([@product, @product.comments.build]) do |f| %>
  	<p>
  		<%= f.label :body, "Comments" %><br>
  		<%= f.text_area :body %>
  	</p>

    <p>
      <div class="rating"></div>
    </p>
    
  	<p>
  		<% f.label :rating %><br>
  		<%= f.text_field :rating, class: "rating" %>
  	</p>
  	<p>
  		<%= f.sumbit "Submit" %>
  	</p>

  <% end %>
<% end %>